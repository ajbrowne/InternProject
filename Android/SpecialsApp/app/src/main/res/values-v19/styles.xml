<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">
            @android:style/Widget.Holo.Light.ActionBar.TabText
        </item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="ptrHeaderStyle">@style/Refresh.Text.Color</item>
        <item name="android:actionBarWidgetTheme">@android:style/Theme.Holo.Light.DarkActionBar
        </item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:dropDownListViewStyle">@style/DropDownList</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@color/blue</item>
    </style>

</resources>
