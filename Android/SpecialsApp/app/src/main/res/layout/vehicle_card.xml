<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/silverado"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnail"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:text="2004 Chevrolet Silverado" />

    <ImageView
        android:id="@+id/phoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/thumbnail"
        android:paddingRight="3dp"
        android:paddingTop="7dp"
        android:src="@drawable/ic_action_call" />

    <TextView
        android:id="@+id/gasMileage"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:text="22-27 MPG"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/dealerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gasMileage"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:text="Shaver Autos" />

    <TextView
        android:id="@+id/oldPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dealerName"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="10dp"
        android:text="@string/strikethrough"
        android:textColor="#aaa" />

    <TextView
        android:id="@+id/newPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dealerName"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/oldPrice"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="3dp"
        android:text="$11,000"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dealerName"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:paddingRight="10dp"
        android:text="USED"
        android:textColor="#534CE6" />

</RelativeLayout>