<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.astuetz.PagerSlidingTabStrip xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tabs_search"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        app:pstsDividerColor="#fff"
        app:pstsIndicatorColor="#00559A"
        app:pstsIndicatorHeight="4dp"
        app:pstsShouldExpand="true" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fragmentContainer3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabs_search" />

</RelativeLayout>