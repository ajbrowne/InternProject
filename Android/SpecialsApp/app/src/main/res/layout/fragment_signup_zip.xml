<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Fragments.BlankFragment">

    <TextView
        android:id="@+id/flow1_title"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="95dp"
        android:text="Enter Your Zip Code"
        android:textColor="#00559A"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flow1_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flow1_title"
        android:gravity="center"
        android:textColor="#000"
        android:paddingTop="25dp"
        android:text="This will tell dealers how near you are to them\n and of they are the right dealer for you." />

    <EditText
        android:id="@+id/flow1_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flow1_info"
        android:layout_margin="25dp"
        android:background="@drawable/rounded_input"
        android:hint="Enter Zip"
        android:inputType="textPostalAddress"
        android:textColor="#000"
        android:textCursorDrawable="@null"
        android:singleLine="true"
        android:maxLines="1"/>

    <Button
        android:id="@+id/flow1_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flow1_zip"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/custom_button"
        android:text="Continue"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/flow1_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textColor="#00559A"/>

</RelativeLayout>
