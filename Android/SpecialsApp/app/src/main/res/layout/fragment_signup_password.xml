<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Fragments.BlankFragment">

    <TextView
        android:id="@+id/flow4_title"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:paddingTop="95dp"
        android:text="Choose a Password"
        android:textColor="#00559A"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flow4_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flow4_title"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:paddingTop="25dp"
        android:text="Include at least one capital letter, symbol,\n and number in your password"
        android:textColor="#000" />

    <EditText
        android:id="@+id/flow4_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flow4_info"
        android:layout_margin="25dp"
        android:background="@drawable/rounded_input"
        android:fontFamily="sans-serif-light"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#000"
        android:textCursorDrawable="@null" />

    <EditText
        android:id="@+id/flow4_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flow4_password"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/rounded_input"
        android:fontFamily="sans-serif-light"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#000"
        android:textCursorDrawable="@null" />

    <Button
        android:id="@+id/flow4_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flow4_verify"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-light"
        android:text="Continue"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/flow4_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="#00559A" />

</RelativeLayout>
