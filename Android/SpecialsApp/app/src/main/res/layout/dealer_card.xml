<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dealer_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#000" />

    <TextView
        android:id="@+id/dealer"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/url"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="5dp"
        android:paddingTop="8dp"
        android:text="Bob Thomas Ford" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dealer"
        android:layout_toRightOf="@id/url"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:text="Fort Wayne, IN"
        android:textColor="#aaa" />

    <TextView
        android:id="@+id/deals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/city"
        android:layout_toRightOf="@id/url"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:text="10 deals currently running" />

    <ImageView
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="3dp"
        android:paddingTop="7dp"
        android:src="@drawable/ic_action_place" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/deals"
        android:fontFamily="sans-serif-light"
        android:paddingRight="5dp"
        android:text="10.7 miles"
        android:textColor="#534CE6" />

</RelativeLayout>