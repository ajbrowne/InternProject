<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="1dp"
    android:minHeight="140dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gridCar"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/aztek" />

    <TextView
        android:id="@+id/smallCar"
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridCar"
        android:fontFamily="sans-serif-light"
        android:maxWidth="100dp"
        android:paddingTop="5dp"
        android:text="2004 Chevrolet Silverado" />

    <TextView
        android:id="@+id/smallPrice"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/smallCar"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-light"
        android:gravity="bottom"
        android:text="$6,000"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/smallType"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/smallCar"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/smallPrice"
        android:fontFamily="sans-serif-light"
        android:gravity="right|bottom"
        android:text="New"
        android:textColor="#00559A"
        android:textSize="12sp" />


</RelativeLayout>