<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#00559A</item>
        <item name="android:titleTextStyle">@style/NewStyleThing</item>
    </style>

    <style name="NewStyleThing" parent="android:TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MyActionBarTabs"
        parent="@android:style/Widget.Holo.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/tab_indicator_ab_example</item>
    </style>

    <style name="Refresh.Text.Color" parent="android:Widget">
        <item name="ptrHeaderTitleTextAppearance">@style/title_color</item>
    </style>

    <style name="title_color">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DropDownList">
        <item name="android:listSelector">@color/grey</item>
    </style>

</resources>